// https://aka.ms/devcontainer.json
{
    "customizations": {
        "vscode": {
            "extensions": [
                // Microsoft:
                "ms-vscode-remote.remote-ssh",
                "ms-azuretools.vscode-docker",
                "ms-vscode.makefile-tools",

                // Github:
                "GitHub.copilot",
                "GitHub.remotehub",
                "GitHub.codespaces",
                "GitHub.github-vscode-theme",
                "GitHub.vscode-pull-request-github",
                "GitHub.vscode-github-actions",

                // Version control:
                "eamodio.gitlens",
                "vivaxy.vscode-conventional-commits",
                "MichaelCurrin.auto-commit-msg",
                "huizhou.githd",
                "arturock.gitstash",
                "letmaik.git-tree-compare",
                "donjayamanne.githistory",
                "mhutchie.git-graph",
                "waderyan.gitblame",

                // External diagnostics:
                "softwaredotcom.swdc-vscode",
                "Lightrun.lightrunplugin-saas",

                // External integration:
                "Ho-Wan.vscode-trello-viewer",
                "hediet.vscode-drawio",

                // Node dependency management:
                "idered.npm",
                "herrmannplatz.npm-dependency-links",
                "christian-kohler.npm-intellisense",
                "howardzuo.vscode-npm-dependency",
                "gamunu.vscode-yarn",

                // General aesthetics:
                "usernamehw.errorlens",
                "vscode-icons-team.vscode-icons",
                "oderwat.indent-rainbow",
                "kamikillerto.vscode-colorize",
                "mkxml.vscode-filesize",
                "IBM.output-colorizer",

                // General tools:
                "Gruntfuggly.todo-tree",

                // General syntax:
                "redhat.vscode-xml",
                "redhat.vscode-yaml",
                "IronGeek.vscode-env",
                "Kasik96.latte",
                "rohit-gohri.format-code-action",

                // General formatting:
                "tombonnike.vscode-status-bar-format-toggle",
                "esbenp.prettier-vscode",

                // General testing:
                "hbenl.vscode-test-explorer",
                "ms-vscode.test-adapter-converter",

                // JS/TS Diagnostic:
                "wix.vscode-import-cost",
                "WallabyJs.wallaby-extension-pack",

                // JS/TS Syntax:
                "unifiedjs.vscode-mdx",

                // JS/TS Formatting:
                "dbaeumer.vscode-eslint",

                // Frontend testing:
                "vitest.explorer",

                // Vue:
                "Vue.volar",

                // General backup:
                "xyz.local-history"
            ],
            "settings": {
                "files.exclude": {
                    "**/.git": true,
                    "**/.svn": true,
                    "**/.hg": true,
                    "**/CVS": true,
                    "**/.DS_Store": true,
                    "**/Thumbs.db": true
                },

                "task.quickOpen.showAll": false,
                "task.quickOpen.detail": true,
                "task.quickOpen.history": 20,

                "github.copilot.enable": {
                    "*": true
                },
                "github.copilot.editor.enableAutoCompletions": true,
                "github.copilot.advanced": {},

                "testExplorer.hideWhen": "never",
                "testExplorer.showOnRun": true,
                "testExplorer.useNativeTesting": false,
                "testExplorer.addToEditorContextMenu": true,
                "testExplorer.codeLens": true,
                "testExplorer.errorDecoration": true,
                "testExplorer.errorDecorationHover": true,
                "testExplorer.gutterDecoration": true,
                "testExplorer.hideEmptyLog": true,
                "testExplorer.mergeSuites": true,

                "iridium.npm.packageManager": "npm",
                "iridium.npm.showResultDescription": true,

                "npm.updateStrategy": "SEMVER",
                
                "eslint.enable": true,
                "eslint.debug": true,
                "eslint.nodeEnv": "development",
                "eslint.format.enable": false,
                "eslint.options": {
                    "extensions": [
                        ".js",
                        ".jsx",
                        ".md",
                        ".mdx",
                        ".ts",
                        ".tsx"
                    ]
                },

                "[json]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true
                },

                "[jsonc]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true
                },

                "[yaml]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true
                },

                "[dockercompose]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true
                },

                "[javascript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.codeActionsOnSave": {
                        "source.formatDocument": "explicit",
                        "source.fixAll.eslint": "explicit"
                    }
                },

                "[typescript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.codeActionsOnSave": {
                        "source.formatDocument": "explicit",
                        "source.fixAll.eslint": "explicit"
                    }
                },

                "[html]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.codeActionsOnSave": {
                        "source.formatDocument": "explicit",
                        "source.fixAll.eslint": "explicit"
                    }
                },

                "[css]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.codeActionsOnSave": {
                        "source.formatDocument": "explicit",
                        "source.fixAll.eslint": "explicit"
                    }
                },

                "[scss]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.codeActionsOnSave": {
                        "source.formatDocument": "explicit",
                        "source.fixAll.eslint": "explicit"
                    }
                },

                "[vue]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.codeActionsOnSave": {
                        "source.formatDocument": "explicit",
                        "source.fixAll.eslint": "explicit"
                    }
                },

                "editor.formatOnPaste": false,
                "editor.formatOnType": false,
                "editor.formatOnSave": false,
                "editor.formatOnSaveMode": "file"
            }
        }
    }
}
